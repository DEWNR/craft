{#
 # Alert banner
 #
 # @param   alertId         string (unique)
 # @param   text            redactor field
 # @param   dismissible     boolean
 #}

{% set alertId = alertId ?? 'alertBanner' %}

<div class="alert-banner alert-banner--hidden relative bg-indigo-600" id="{{ alertId|e('js') }}">
	<div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8">
		<div class="pr-16 sm:text-center sm:px-16">
			{{ text|md|attr({class: 'font-medium text-white'}) }}
		</div>
		{% if dismissible %}
			<div class="absolute inset-y-0 right-0 pt-1 pr-1 flex items-start sm:pt-1 sm:pr-2 sm:items-start js-only">
				<button type="button" class="flex p-2 rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-white">
					<span class="sr-only">Dismiss</span>
					{% include '_svg/outline-x' with {
            classes: 'h-6 w-6 text-white'
          } %}
				</button>
			</div>
		{% endif %}
	</div>
</div>
