{% extends "_layouts/generic-page-layout" %}
{% set slides = entry.slider.all() %}

{# -- Any <meta> tags that should be included in the <head> -- #}
{% block headMeta %}{% endblock %}

{# -- Any <link> tags that should be included in the <head> -- #}
{% block headlinks %}{% endblock %}

{# -- Any CSS that should be included before </head> #}
{% block headCss %}{% endblock %}

{# -- Page body -- #}
{% block content %}
	{% include "_components/hero-slider" with slides %}

	<section>
		<div class="container mx-auto py-8">
			<div class="text-center p-8 mb-8">
				<h1 class="font-heading italic font-bold text-5xl pt-4">
					Welcome to your new Craft site
				</h1>
				<p class="font-body text-xl pt-4">
					Brought to you by the DEW web team.
				</p>
				<p class="mt-10">
					<a class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" href="/{{ craft.app.config.general.cpTrigger }}">Login to the control panel</a>
				</p>
			</div>
		</div>
	</section>
{% endblock %}

{# -- Any JavaScript that should be included before </body> -- #}
{% block bodyJs %}{% endblock %}
