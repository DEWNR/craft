{# TODO: fix background height when there is no description and the device size is > lg #}
<a href="{{ href }}" class="relative w-full flex flex-col group">
	{% if image %}
		{% set optimizedImages = image.optimizedHeroImage ?? null %}
		<div>
			<picture>
				<source srcset="{{ optimizedImages.srcsetWebP() }}" sizes="100vw" type="image/webp"/>
				<img src="{{ optimizedImages.src() }}" srcset="{{ optimizedImages.srcset() }}" sizes="100vw" class="object-cover"/>
			</picture>
		</div>
	{% endif %}
	<div class="hidden absolute top-0 left-0 lg:flex w-1/2 bg-white overflow-hidden" style="border-top-right-radius: 1500px; top: -70px; height: 1500px"></div>

	<div class="hidden absolute top-0 left-0 h-full lg:flex w-1/2 p-16 flex-col justify-center space-y-4 group-hover:underline">
		<h2 class="w-7/12 text-3xl text-primary-500">{{ heading }}</h2>
		{% if subHeading %}
			<p class="w-5/6">{{ subHeading }}</p>
		{% endif %}
	</div>

	<div class="lg:hidden px-8 py-6 bg-gray-300">
		<div class="w-10/12">
			<h2 class="text-3xl text-primary-500">{{ heading }}</h2>
			<p>{{ subHeading }}</p>
		</div>
	</div>
</a>
