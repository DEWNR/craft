{#
 # site-fonts
 #
 # This file lets us define a fonts variable so that we can dynamically create
 # inline css for performant font loading.
 #
 # Remember to update the font variables in the src/scss directory if making
 # changes to font families
 #
 #}
{% set fonts = {
    'proxima-nova': [
        {
            style: 'normal',
            weight: '400',
            local: 'ProximaNova-Regular',
            src: {
                woff2: '/dist/fonts/ProximaNovaRegular.woff2',
                woff: '/dist/fonts/ProximaNovaRegular.woff'
            },
            preload: true
        },
        {
            style: 'italic',
            weight: '400',
            local: 'ProximaNovaItalic',
            src: {
                woff2: '/dist/fonts/ProximaNovaItalic.woff2',
                woff: '/dist/fonts/ProximaNovaItalic.woff'
            },
            preload: true
        },
        {
            style: 'normal',
            weight: '700',
            local: 'ProximaNova-Bold',
            src: {
                woff2: '/dist/fonts/ProximaNovaBold.woff2',
                woff: '/dist/fonts/ProximaNovaBold.woff'
            },
            preload: true
        },
        {
            style: 'italic',
            weight: '700',
            local: 'ProximaNova-BoldItalic',
            src: {
                woff2: '/dist/fonts/ProximaNovaBoldItalic.woff2',
                woff: '/dist/fonts/ProximaNovaBoldItalic.woff2'
            },
            preload: true
        }
    ],
    'Dewnrger': [
        {
            style: 'normal',
            weight: '700',
            local: 'Dewnrger67BoldCondensed',
            src: {
                woff2: '/dist/fonts/Dewnrger67BoldCondensed.woff2',
                woff: '/dist/fonts/Dewnrger67BoldCondensed.woff'
            },
            preload: true
        },
        {
            style: 'italic',
            weight: '700',
            local: 'Dewnrger68BoldCondensedItalic',
            src: {
                woff2: '/dist/fonts/Dewnrger68BoldCondensedItalic.woff2',
                woff: '/dist/fonts/Dewnrger68BoldCondensedItalic.woff'
            },
            preload: true
        }
    ]
} %}

{% spaceless %}

{% block preload %}{% endblock preload %}
{% block style %}{% endblock style %}

{% endspaceless %}
