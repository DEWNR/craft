{% set borderRadius = '0px' %}

{% switch position %}

	{% case 'top' %}
  {% set borderRadius = '5px 5px 0 0' %}

	{% case 'bottom' %}
  {% set borderRadius = '0 0 5px 5px' %}

{% endswitch %}

<table border="0" cellpadding="0" cellspacing="0" style="margin:0 auto;width:620px">
	<tbody>
		<tr>
			<td style="text-align:center">
				<table border="0" cellpadding="0" cellspacing="0" style="margin:0 auto;width:500px;background:#fff;border-radius:{{borderRadius}};">
					<tbody>
						<tr>
							<td style="padding:0px 60px 0px;">
								<table border="0" cellpadding="0" cellspacing="0" style="width:100%">
									<tbody>
										<tr>
											<td style="text-align:left;color:#535f67;font:14px/18px Arial,sans-serif;">&nbsp;</td>
										</tr>
									</tbody>
								</table>
							</td>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
	</tbody>
</table>
