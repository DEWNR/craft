{
    "name": "example-project",
    "version": "1.0.0",
    "description": "Example Project brand website",
    "keywords": [
        "Example",
        "Keywords"
    ],
    "license": "CC-BY-3.0",
    "homepage": "https://github.com/DEWNR/example-project",
    "author": {
        "name": "DEW Internet team",
        "email": "dew.internet@sa.gov.au",
        "url": "https://www.environment.sa.gov.au"
    },
    "browser": "/web/index.php",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DEWNR/example-project.git"
    },
    "private": true,
    "scripts": {
        "dev": "npm run dev-mode-on && npm run clean && npm run clear-caches && NODE_ENV=development webpack-dev-server --https --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
        "start": "npm run dev-mode-on && npm run clean && NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js && npm run clear-caches",
        "build": "npm run dev-mode-off && npm run clean && NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js && npm run clear-caches && npm run clean-manifest && npm run service-worker",
        "clean": "rimraf web/dist/* web/{*.js,hot,mix-manifest.json,*.ico}",
        "clear-caches": "./craft clear-caches/all",
        "dev-mode-on": "replace 'DEV_MODE=[1|0]' 'DEV_MODE=1' .env",
        "dev-mode-off": "replace 'DEV_MODE=[1|0]' 'DEV_MODE=0' .env",
        "clean-manifest": "replace '/dist/' '' ./web/mix-manifest.json",
        "service-worker": "workbox injectManifest workbox-settings.js",
        "generate-favicon": "real-favicon generate favicon.json _junk/faviconData.json ./src/favicons/"
    },
    "dependencies": {
        "core-js": "^3.4.5",
        "lazysizes": "^5.1.1",
        "picturefill": "^3.0.3",
        "tailwindcss": "^1.1.4",
        "tailwindcss-aspect-ratio": "^2.0.0",
        "workbox-webpack-plugin": "^4.3.1"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "cli-real-favicon": "0.0.8",
        "copy-webpack-plugin": "^5.0.5",
        "eslint": "^6.7.2",
        "eslint-config-standard": "^14.1.0",
        "eslint-loader": "^3.0.2",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "eslint-plugin-vue": "^6.0.1",
        "file-loader": "^5.0.2",
        "globby": "^10.0.1",
        "html-critical-webpack-plugin": "^2.1.0",
        "imagemin-webpack-plugin": "^2.4.2",
        "laravel-mix": "^5.0.0",
        "laravel-mix-critical": "^0.1.2",
        "laravel-mix-eslint": "^0.1.3",
        "laravel-mix-imagemin": "^1.0.3",
        "laravel-mix-make-file-hash": "^1.2.0",
        "laravel-mix-polyfill": "^1.1.0",
        "laravel-mix-purgecss": "^4.1.0",
        "laravel-mix-svg-sprite": "^1.0.1",
        "node-sass": "^4.12.0",
        "postcss-preset-env": "^6.7.0",
        "raw-loader": "^4.0.0",
        "replace": "^1.1.1",
        "resolve-url-loader": "^3.1.1",
        "rimraf": "^3.0.0",
        "sass": "^1.22.9",
        "sass-loader": "^8.0.0",
        "stylelint": "^12.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-scss": "^3.13.0",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.41.2"
    },
    "browserslist": [
        "> 0.5% in AU",
        "last 3 years",
        "iOS >= 7",
        "ie >= 11"
    ],
    "prettier": {
        "trailingComma": "none",
        "useTabs": false,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
    },
    "eslintIgnore": [
        "/web/**/*",
        "/node_modules/**/*",
        "/vendor/**/*"
    ]
}
